    // ./siguel -e Teste2 -f c1.geo -o Teste/out -q c1/todos.qry -ec c1.ec -pm c1.pm -via c1-v.via
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/siguel",
            "args": ["-e", "Teste2", "-f", "c1.geo", "-o", "Teste/out", "-q", "c1/todos.qry", "-ec", "c1.ec", "-pm", "c1.pm", "-via", "c1-v.via"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}